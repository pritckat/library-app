<h1>Create A New Library</h1>
<%= form_for @library do |f| %>
  <% if @library.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@library.errors.count, "error") %> prohibited this library from being saved:
      </h2>

      <ul>
      <% @library.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<%= f.label :name %>
<%= f.text_field :name%>
<br>
<h2>Add Books:</h2>

<%= f.fields_for :books do |book| %>
  <%= book.label :title %>
  <%= book.text_field :title %>
  <%= book.label :language %>
  <%= book.text_field :language %><br>

<% end %>
<%= f.submit "Create Library" %>
<% end %>