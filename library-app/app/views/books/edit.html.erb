<%= form_for @book do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :language %>
<%= f.text_field :language %>
Author<%= f.text_field :author, list: "authors_autocomplete", :value => "" %>
    <datalist id="authors_autocomplete">
    <% Author.all.each do |author| %>
        <option value="<%= author.full_name%>">
    <% end %>
    </datalist>
    <br>
<%= f.collection_check_boxes :library_ids, @user.non_mandatory_libraries - Library.mandatory, :id, :name %>
    <br>
<%= f.submit %>
<% end %>